{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019"],

    "outDir": "./bin",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,

    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
